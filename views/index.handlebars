<div class="text-center">
    <img src="/assets/img/slider_charburger.png" alt="burger">
    <h1>Eat-Da-Burger</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="prepared">
                <ul class="list-group list-group-flush">
                    {{#each burgers}}
                    {{#unless devoured}}
                        <li class="list-group-item">
                            {{id}}. {{burger_name}}
                            <button class="devour btn btn-secondary" data-id="{{id}}" data-devoured="{{devoured}}">
                            Devour It!
                            </button>
                        </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div id="devoured">
                <ul class="list-group list-group-flush">
                    {{#each burgers}}
                    {{#if devoured}}
                        <li class="list-group-item">
                            {{id}}. {{burger_name}}
                        </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div> 
</div>

<form>
    <div class="container">
        <div class="form-group">
            <input placeholder="Type your burger name here" class="form-control" id="newBurger" burger="burger"></input>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-primary submit">Submit</button>
        </div>
        <div class="text-center">
            <p>Enter a burger you want to eat, Click the "Submit" button.</p>
        </div>
    </div>
</form>